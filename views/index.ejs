<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<title>Document</title>
</head>
<body>
	<div class="container my-4">
		<h1>Enter Your Leet Code Problem</h1>
		<form action="/create-card" method="POST" class="border-bottom">
			<div class="row">
				<div class="col-12 col-md mb-3">
					<label for="name">Name</label>
					<input type="text" name="title" id="title" required class="form-control">
				</div>
				<div class="col-12 col-md mb-3">
					<label for="statusIds">Status</label>
					<select name="statusIds" id="statusIds" class="form-select">
						<% statuses.forEach(status => { %>
							<option value="<%= status.id %>"><%= status.name %></option>
						<% }) %>
					</select>
				</div>
				<div class="col-12 col-md mb-3">
					<label for="topicIds">Topics</label>
					<select name="topicIds" id="topicIds" class="form-select" multiple>
						<% topics.forEach(topic => { %>
							<option value="<%= topic.id %>"><%= topic.name %></option>
						<% }) %>
					</select>
				</div>
				<div class="col-12 col-md mb-3">
					<label for="difficultyIds">Difficulty</label>
					<select name="difficultyIds" id="difficultyIds" class="form-select">
						<% difficulties.forEach(difficulty => { %>
							<option value="<%= difficulty.id %>"><%= difficulty.name %></option>
						<% }) %>
					</select>
				</div>
				<div class="col-12 col-md mb-3">
					<label for="rating">Rating</label>
					<input type="number" name="rating" id="rating" required class="form-control">
				</div>
				<div class="mb-3">
					<label for="link">Link</label>
					<input type="url" name="link" id="link" required class="form-control">
				</div>
				<div class="mb-3">
					<label for="notes">Notes</label>
					<textarea name="notes" id="notes" class="form-control"></textarea>
				</div>
		</form>
	</div>
</body>
</html>
